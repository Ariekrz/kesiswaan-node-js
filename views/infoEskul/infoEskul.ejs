            <table class="table">
              <caption class="ms-4">
                <!-- Untuk Halaman Pagination -->
                <a href="#" data-bs-toggle="modal" data-bs-target="#tambahData"><span class="badge bg-label-primary me-1">Tambah Data</span></a>
                <!-- Modal Tamba Data -->
                <div class="modal fade" id="tambahData" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">TAMBAH INFO</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form id="formAccountSettings" method="POST" action="/infoEskul/simpanInfo">
                            <div class="modal-body">
                                <div class="row">
                                  <div class="col mb-3">
                                    <label class="form-label" for="idInfoeskul">No Id</label>
                                    <input type="text" class="form-control" name="idInfoeskul" placeholder="xxxxx" />
                                  </div>
                                  <div class="row g-2">
                                    <label for="noIdGuru">namaGuru</label>
    
                                    <select name="noIdGuru"  class="form-control">
                                      <option value="1">Pa Alfian Rahman</option>
