                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">EDIT INFO</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form id="formAccountSettings" method="POST" action="/infoEskul/updateInfo">
                            <div class="modal-body">
                                <div class="row">
                                  <div class="col mb-3">
                                    <label class="form-label" for="idInfoeskul">No Id</label>
                                    <input type="text" class="form-control" name="idInfoeskul" placeholder="xxxxx" value="<%= data[i].idInfoeskul%>"/>
                                  </div>
                                  <div class="row g-2">
                                    <label for="pet-select">nama Guru</label>
                                    <select name="noIdGuru"  class="form-control" value="<%= data[i].noIdGuru%>">
                                      <option value="<%= data[i].noIdGuru%>"><%= data[i].namaGuru%></option>    
                                      <option value="1">Pa Alfian Rahman</option>
                                      <option value="2">Pa Ryan Permana</option>
                                      <option value="3">Pa Jimmy</option>
                                      <option value="4">Pa Raka</option>
                                      <option value="5">Pa ade</option>
                                      <option value="6">Pa tri</option>
                                      <option value="7">Pa Rahmat</option>
                                      <option value="8">Pa Lutfi</option>
                                        </select>
                              </div>
                                  <div class="row g-2">
                                    <div class="col mb-0">
                                      <label for="nama_ekskul" class="form-label">Nama Ekskul</label>
                                      <input type="text" name="nama_ekskul" class="form-control" placeholder="xxxx"  value="<%= data[i].nama_ekskul%>" />
                                    </div>
                                  </div>
                                  <div class="row g-2">
                                    <div class="col mb-0">                                    
                                      <label for="preview_eskul" class="form-label">Preview Ekskul</label>
                                      <textarea name="preview_eskul" class="form-control" placeholder="xxxx"><%= data[i].preview_eskul%></textarea>

                                  </div>
                                </div>
                              
                                  <div class="row g-2">
                                    <div class="col mb-0">
                                      <label for="informasi_eskul" class="form-label">Informasi Ekskul</label>
                                      <textarea name="informasi_eskul" class="form-control" placeholder="xxxx"><%= data[i].informasi_eskul%></textarea>
