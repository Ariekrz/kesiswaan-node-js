                  <td><%=data[i].namaGuru%></td>
                  <td><%=data[i].nama_ekskul%></td>
                  <td><%= data[i].preview_eskul.slice(0, 50) %></td>
                  <td><%= data[i].informasi_eskul.slice(0, 50) %></td>
