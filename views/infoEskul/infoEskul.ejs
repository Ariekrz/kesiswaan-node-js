                                      <option value="6">Pa tri</option>
                                      <option value="7">Pa Rahmat</option>
                                      <option value="8">Pa Lutfi</option>
    
                                    </select>
                              
                              </div>
                                <div class="row g-2">
                                    <div class="col mb-0">
                                      <label for="nama_ekskul" class="form-label">Nama Ekskul</label>
                                      <input type="text" name="nama_ekskul" class="form-control" placeholder="xxxx" />
                                    </div>
                                  </div>
                                  <div class="row g-2">
                                    <div class="col mb-0">
                                      <label for="preview_eskul" class="form-label">Preview Ekskul</label>
                                      <textarea name="preview_eskul" class="form-control" placeholder="xxxx"></textarea>
                                    </div>
                                  </div>
                                  <div class="row g-2">
                                    <div class="col mb-0">
                                      <label for="informasi_eskul" class="form-label">informasi Ekskul</label>
                                      <textarea name="informasi_eskul" class="form-control" placeholder="xxxx"></textarea>
                                    </div>
                                  </div>
                                  <div class="row g-2">
                                    <div class="col mb-0">
                                      <label for="logo" class="form-label">Logo Ekskul</label>
                                      <input type="file" name="logo" class="form-control" placeholder="xxxx" />
                                    </div>
                                  </div>
                                  </div>
                                 
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                  Close
                                </button>
                                <button type="submit" class="btn btn-primary">Simpan Info</button>
                              </div>
                            </div>
                          </form>
                        </div>
                    </div>
                </div>     
                <!-- Modal Unggah Data -->
                <div class="modal fade" id="unggahData" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">Unggah Data Jenis Pengguna.csv</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col mb-3">
                                        <label for="nameWithTitle" class="form-label">Pilih Berkas CSV Data</label>
                                        <form action="/unggahJenisPengguna" method="post" enctype="multipart/form-data">    
                                            <input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" accept="csv" name="import-csv"/>
                                            <hr>
                                            <button class="btn btn-outline-primary" type="reset" id="inputGroupFileAddon04">Reset</button>
                                            <button type="submit" class="btn btn-primary">Save changes</button>
                                        </form>
                                    </div>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>      
              </caption>
              <thead>
                <tr>
                  <th><%= thSatu %></th>
                  <th><%= thDua %></th>
                  <th><%= thTiga %></th>
