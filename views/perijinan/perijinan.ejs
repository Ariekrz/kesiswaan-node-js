<%- include('../header');%>
<body>
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <!-- Menu Navigasi Side-->
      <%- include('../admin/menuNav');%>
      <!-- End Menu Navigasi Side-->
      <!-- Menu Navigasi Side-->
      <%- include('../admin/topNavBar');%>
      <!-- End Menu Navigasi Side-->
      <!-- Content wrapper -->
    <div class="content-wrapper">
      <!-- Content -->
      <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kesiswaan /</span> Perijinan</h4>
        <!-- Contextual Classes -->
        <div class="card">
          <h5 class="card-header">Daftar perijinan</h5>
          <div class="table-responsive text-nowrap">
            <table class="table">
              <caption class="ms-4">
                <!-- Untuk Halaman Pagination -->
                <a href="#" data-bs-toggle="modal" data-bs-target="#tambahData"><span class="badge bg-label-primary me-1">Tambah Data</span></a>
                <!-- Modal Tamba Data -->
                <div class="modal fade" id="tambahData" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">TAMBAH DATA</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form  method="POST" action="/perijinan/simpanPerijinan">
                            <div class="modal-body">
                                <div class="row">
                                  <div class="col mb-3">
                                    <label class="form-label" for="idPerijinan">No Id Perijinan</label>
                                    <input type="text" class="form-control" name="idPerijinan" placeholder="Id perijinan"/>
                                  </div>
                                  <div class="col mb-3">
                                    <label for="noIdPesertaDidik" class="form-label">Nama Siswa</label>
                                    <input name="noIdPesertaDidik" type="text" class="form-control" placeholder=" id peserta didik" />
                                  </div>

                                  <div class="row g-2">
                                    <label for="noIdGuru">Nama Guru Penanggung Jawab</label>
    
                                    <select name="noIdGuru"  class="form-control">
                                      <option value="2">Pa Ryan Permana</option>
                                      <option value="4">Pa Raka</option>
                                      <option value="9">Bu Iqlima</option>
                                      <option value="10">Pa Andi</option>

    
                                    </select>
                              
                              </div>
                                
                                <div class="row g-2">
                                    <div class="col mb-0">
                                      <label for="tanggal_perijinan" class="form-label">Tanggal Perijinan</label>
                                      <input type="date"  name="tanggal_perijinan" class="form-control" placeholder="xxxx" />
                                    </div>
                                  </div>
                                  </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                  Close
                                </button>
                                <button type="submit" class="btn btn-primary">Simpan Info</button>
                              </div>
                            </div>
                          </form>
                        </div>
                    </div>
                </div>     
                <!-- Modal Unggah Data -->
                <div class="modal fade" id="unggahData" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">Unggah Data Jenis Pengguna.csv</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col mb-3">
                                        <label for="nameWithTitle" class="form-label">Pilih Berkas CSV Data</label>
                                        <form action="/unggahJenisPengguna" method="post" enctype="multipart/form-data">    
                                            <input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" accept="csv" name="import-csv"/>
                                            <hr>
                                            <button class="btn btn-outline-primary" type="reset" id="inputGroupFileAddon04">Reset</button>
                                            <button type="submit" class="btn btn-primary">Save changes</button>
                                        </form>
                                    </div>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>      
              </caption>
              <thead>
                <tr>
                  <th><%= thSatu %></th>
                  <th><%= thDua %></th>
                  <th><%= thTiga %></th>
                  <th><%= thEmpat %></th>
                  <th><%= thLima %></th>
                </tr>
              </thead>
              <tbody class="table-border-bottom-0">
                <% if(data.length){              
                  for(var i = 0; i< data.length; i++) {%>
                <tr class="table-default">
                  <td><%=data[i].idPerijinan%></td>
                  <td><%= data[i].namaPesertaDidik%></i></td>
                  <td><%=data[i].namaGuru%></td>
                  <td><%=data[i].tanggal_perijinan%></td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="../suratPerijinan" data-bs-toggle="modal"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer" viewBox="0 0 16 16">
                          <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z"/>
                          <path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2H5zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4V3zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2H5zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1z"/>
                        </svg> Cetak</a>
                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#editData<%= data[i].idPerijinan%>"
                          ><i class="bx bx-edit-alt me-1"></i> Edit</a
                        >
                        <a class="dropdown-item" href="/perijinan/hapusPerijinan/<%=data[i].idPerijinan%>"
                          ><i class="bx bx-trash me-1"></i> Delete</a
                        >
                      </div>
                    </div>
                  </td>
                </tr>
                <!-- Edit Tamba Data -->
                <div class="modal fade" id="editData<%=data[i].idPerijinan%>" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">EDIT DATA</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form  method="POST" action="/perijinan/updatePerijinan">
                              <div class="modal-body">

                              <div class="row">
                                <div class="col mb-3">
                                  <label class="form-label" for="idPerijinan">No Id Perijinan</label>
                                  <input type="text" class="form-control" name="idPerijinan" placeholder="Id perijinan" value="<%= data[i].idPerijinan%>"/>
                                </div>
                                <div class="col mb-3">
                                  <label for="noIdPesertaDidik" class="form-label">Nama Siswa</label>
                                  <input name="noIdPesertaDidik" type="text" class="form-control" placeholder=" id peserta didik" value="<%= data[i].noIdPesertaDidik%>" />
                                </div>

                                <div class="row g-2">
                                  <div class="row g-2">
                                    <label for="pet-select">Nama Guru Penanggung Jawab</label>
                                    <select name="noIdGuru"  class="form-control" value="<%= data[i].noIdGuru%>">
                                      <option value="<%= data[i].noIdGuru%>"><%= data[i].namaGuru%></option>    
                                      
                                    <option value="2">Pa Ryan Permana</option>
                                    <option value="4">Pa Raka</option>
                                    <option value="9">Bu Iqlima</option>
                                    <option value="10">Pa Andi</option>

  
                                  </select>
                            
                            </div>
                              
                              <div class="row g-2">
                                  <div class="col mb-0">
                                    <label for="tanggal_perijinan" class="form-label">Tanggal Perijinan</label>
                                    <input type="date"  name="tanggal_perijinan" class="form-control" placeholder="xxxx" value="<%= data[i].tanggal_perijinan%>" />

                          
                            
                                    </div>
                                  </div>
                              </div>                            
                              <div class="modal-footer">
                              <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                Close
                              </button>
                              <button type="submit" class="btn btn-primary">Simpan Info</button>
                            </div>
                          </div>
                        </form>
                      </div>
                  </div>
              </div>
                <% }
                                    
              }else{ %>
                  <tr>
                      <td colspan="5">
                          <div class="alert alert-danger" role="alert">
                              Data Tidak Ditemukan !
                          </div>
                      </td>
                  </tr>
              <% } %>    
              </tbody>
            </table>
          </div>
        </div>
        <!--/ Contextual Classes -->
      </div>
      <!-- / Content -->
<%- include('../footer');%>